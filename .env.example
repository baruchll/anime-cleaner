# Path to your anime library inside the container
ANIME_LIBRARY_PATH=/mnt/media/anime

# Number of worker threads (parallel files processed)
MAX_WORKERS=4

# Telegram bot token (create with @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID (group or user where messages go)
TELEGRAM_CHAT_ID=your_chat_id_here

# Allowed subtitle languages (comma-separated, ISO codes)
ALLOWED_SUBS=eng,jpn,heb

# Allowed audio languages (comma-separated, ISO codes)
ALLOWED_AUDIO=eng,jpn
