# --- Mode ---
# Choose which mode this container runs in: anime or movies
MODE=anime

# --- Anime libraries ---
ANIME_SERIES_PATH=/mnt/media/anime
ANIME_MOVIES_PATH=/mnt/media/anime_movies

# --- Movies & TV libraries ---
MOVIES_PATH=/mnt/media/movies
TV_PATH=/mnt/media/tv

# --- Workers ---
# Number of worker threads for parallel processing
MAX_WORKERS=4

# --- Rules ---
# Audio/subtitle rules for anime
ANIME_ALLOWED_AUDIO=eng,jpn
ANIME_ALLOWED_SUBS=eng,jpn,heb

# Audio/subtitle rules for movies & TV
MOVIES_ALLOWED_AUDIO=eng
MOVIES_ALLOWED_SUBS=eng,heb

# --- Telegram notifications ---
# Provide your own bot token and chat ID for daily summary
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
